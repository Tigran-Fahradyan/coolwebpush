self.addEventListener("push", function(event) {
//    var title = (event.data && event.data.text().split("-")[0]) || "Some Message from Tigran";
    const data = event.data.text();
    const pushData = JSON.parse(event.data.text());

    event.waitUntil(
        self.registration.showNotification(pushData.message, {
            body: 'Hi All!, This is a body text.',
            dir: 'auto', // String of 'auto' | 'ltr' | 'rtl'
            lang: 'en',
            requireInteraction: true, // notification should remain active until the user clicks or dismisses it
            icon: 'logo.png',
            tag: 'An ID for a given notification that allows you to find, replace, or remove the notification using a script if necessary',
//            vibrate: [300, 100, 400], // would vibrate 300ms, pause 100ms, then vibrate 400ms.
            data: data
        })
    );
});

